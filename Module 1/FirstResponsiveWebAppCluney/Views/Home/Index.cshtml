@model ResponsiveModel
@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h1>Responsive Age Calculator</h1>
    <form asp-action="Index" method="post">
        <div asp-validation-summary="All"></div>
        <div>
            <label asp-for="Name">Name: </label>
            <input asp-for="Name" />
        </div>
        <div>
            <label asp-for="BirthYear">Birthday: </label>
            <input asp-for="BirthYear" type="date" />
        </div>
        <div>
            <label>Result: </label>
            <textarea readonly>@ViewBag.Result</textarea>
        </div>
        <button type="submit">Calculate</button>
        <a asp-action="Index">Clear</a>
    </form>
</body>
</html>
